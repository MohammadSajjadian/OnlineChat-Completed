
@{
    ViewData["Title"] = "Register";
}

@model RegisterViewModel

<form asp-action="RegisterConfirm">
    <div class="form-group">
        <label>نام کاربری</label>
        <input asp-for="userName" type="text" class="form-control">
        <span asp-validation-for="userName"></span>
    </div>
    <div class="form-group">
        <label>نام و نام خانوادگی</label>
        <input asp-for="nameFamily" type="text" class="form-control">
        <span asp-validation-for="nameFamily"></span>
    </div>
    <div class="form-group">
        <label>رمز عبور</label>
        <input asp-for="password" type="password" class="form-control">
        <span asp-validation-for="password"></span>
    </div>
    <div class="form-group">
        <label>تکرار رمز عبور</label>
        <input asp-for="rePassword" type="password" class="form-control">
        <span asp-validation-for="rePassword"></span>
    </div>
    <button type="submit" class="btn btn-primary">ثبت نام</button>
</form>
